	}
	25% {
		transform: translate(0, 4px) scale(0.25);
	}
	50% {
		transform: translate(0, -7px) scale(0.25);
	}
	75% {
		transform: translate(0, 7px) scale(0.25);
	}
	to {
		transform: translate(0, -0px) scale(0.25);
	}
}

