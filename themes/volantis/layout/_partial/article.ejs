    background-image: url("https://langwenchong.gitee.io/figure-bed/alipay.svg") !important;
  }

  #wechat_donate {
    background-image: url("https://langwenchong.gitee.io/figure-bed/wechat.svg") !important;
  }

  #drinks-qrcodes {
    display: none;
  }

  #drinks-qrcode {
    position: absolute;
    top: calc(50% - 90px);
    left: calc(50% - 90px);
